
strategy("Renko Strategy", overlay=true, margin_long=100, margin_short=100)

longCondition = close[2]>close[1] and close>close[1]
shortCondition = close[2]<close[1] and close<close[1]
if (longCondition)
    strategy.entry("Long", strategy.long)
if (shortCondition)
    strategy.close("Long")
//    strategy.entry("Short", strategy.short)